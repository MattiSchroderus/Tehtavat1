<Page
    x:Class="App1_2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1_2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF0E2753">
        <Grid RenderTransformOrigin="0.497,0.369" Height="150" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Background="#FF2C59F1">
            <Grid.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFE80000" Offset="1"/>
                </LinearGradientBrush>
            </Grid.BorderBrush>
            <TextBox x:ConnectionId='2' x:Name="textBoxLogin" Margin="75,20,20,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="#FF8499F9"/>
            <TextBox x:ConnectionId='3' x:Name="textBoxPassword" Margin="75,57,20,0" TextWrapping="Wrap" Text="********" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="White"/>
            <TextBlock x:ConnectionId='4' x:Name="textBlock" HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Login:" VerticalAlignment="Top" RenderTransformOrigin="3.452,0.5"/>
            <TextBlock x:ConnectionId='5' x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="10,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="3.452,0.5" Text="Password"/>
            <Button x:ConnectionId='6' x:Name="button" Content="Login" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="280" Height="39" FontSize="18.667" Margin="10,101,10,10"                 />
        </Grid>
        <TextBlock x:ConnectionId='1' x:Name="Infotextblock" HorizontalAlignment="Left" Margin="795,355,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="80" Width="151"/>

    </Grid>
</Page>

